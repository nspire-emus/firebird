# Contributor: Antonio VÃ¡zquez Blanco <antoniovazquezblanco@gmail.com>

pkgname=firebird
pkgver=0.9beta
pkgrel=1
pkgdesc='Community emulator of TI-Nspire calculators.'
arch=('i686' 'x86_64')
url='https://github.com/nspire-emus/firebird'
license=()
depends=()
makedepends=()
source=('https://github.com/nspire-emus/firebird/archive/v0.11.tar.gz')
md5sums=('b9751c44ce5eb7badee23be22df81362')

build() {
  # Compile...
  cd "${srcdir}/${pkgname}-0.11"
  mkdir -p build
  cd build
  qmake ..
  make
}

package() {
  # Creation of necesary folders...
  install -dm755 "${pkgdir}/usr/bin"

  # Copy the binary...
  install -D -m755 "${srcdir}/${pkgname}-0.9-beta/build/firebird" "${pkgdir}/usr/bin/firebird"
}

